services:
  db:
    image: postgres:16
    environment:
      POSTGRES_PASSWORD: pass
      POSTGRES_DB: app
    ports:
      - "5432:5432"
  app:
    build: .
    depends_on:
      - db
    env_file:
      - .env
    environment:
      DATABASE_DSN: postgres://postgres:pass@db:5432/app?sslmode=disable
    ports:
      - "8080:8080"
